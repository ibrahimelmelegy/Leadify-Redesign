#  Application Port
PORT=5000

# Database configuration
DB_HOST=db                   # Docker Compose service name for PostgreSQL
DB_PORT=5432                 # Default PostgreSQL port
DB_USER=postgres             # PostgreSQL username
DB_PASSWORD=123456           # PostgreSQL password
DB_NAME=leadify              # Database name

# JWT Secret Key for authentication
SECRET_KEY=your_jwt_secret_key
JWT_EXPIRATION_TIME=

# Database sync (DEV ONLY). Recommended: use migrations for production.
DB_SYNC=true
DB_SYNC_ALTER=false

# Email Configuration for Nodemailer
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com     # Your email address
EMAIL_PASS=your_email_password        # Your email password (or app-specific password if 2FA is enabled)

# Base URL for frontend app (used to build reset-password link)
APP_BASE_URL=http://localhost:3000

# CORS allowed origins (comma separated). Empty means allow all (DEV).
CORS_ORIGIN=http://localhost:3000

# Upload constraints
UPLOAD_MAX_SIZE_MB=25
UPLOAD_ALLOWED_MIME=image/png,image/jpeg,application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

ALLOW_SUPER_ADMIN_CREATION=false

BASE_URL=http://localhost:5000/
SESSION_EXPIRATION_TIME=7

SENDGRID_API_KEY=your_sendgrid_api_key  # SendGrid API key for sending emails (if using SendGrid)
