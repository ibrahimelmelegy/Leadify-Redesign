{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,  // Enable decorators
    "emitDecoratorMetadata": true     // Enable metadata reflection
  },
  "include": [
    "src/**/*.ts",
    "types.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
